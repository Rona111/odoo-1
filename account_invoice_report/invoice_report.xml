<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<report 
            id="sale.report_sale_order"
            string="Quotation / Order"
            model="sale.order" 
            report_type="qweb-pdf"
            file="account_invoice_report.report_saleorder_extend" 
            name="account_invoice_report.report_saleorder"
        />

        <report id="report_draftorder_invoice" 
        name="account_invoice_report.report_draft_saleorder_invoice" 
        model="sale.order"
        file="account_invoice_report.report_draft_order_invoice"  
        string="Tax Invoice" 
        report_type="qweb-pdf"/>

        <report 
            id="account.account_invoices"
            model="account.invoice"
            string="Invoice with T&amp;C"
            report_type="qweb-pdf"
            name="account_invoice_report.report_invoice"
            file="account_invoice_report.report_invoice_extend"
        />

        <report 
            string="Full DO" 
            id="stock.action_report_picking" 
            model="stock.picking" 
            report_type="qweb-pdf"
            name="account_invoice_report.report_picking_full" 
            file="account_invoice_report.report_picking_extend_full" 
        />

        <report 
            string="Partial DO-Operations" 
            id="action_report_picking" 
            model="stock.picking" 
            report_type="qweb-pdf"
            name="account_invoice_report.report_picking" 
            file="account_invoice_report.report_picking_extend" 
        />

        <!-- edit invoice form view -->
        <record id="invioce_form_extend" model="ir.ui.view">
            <field name="name">invoice.form.extend</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml" >
                <xpath expr="//field[@name='amount_untaxed']" position="before">
                    <field name="original_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="discount_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

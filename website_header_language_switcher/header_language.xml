<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="language_switch_in_website_header" inherit_id="website.layout" name="Main layout">
            <xpath expr="//body//div[@class='navbar navbar-default navbar-static-top']" position="after">
                <ul class="list-inline js_language_selector" style="float:right;margin-right:16px;margin-bottom:8px"
                    t-if="(request.website_multilang and len(languages) &gt; 1) or editable">
                    <li t-foreach="languages" t-as="lg">
                        <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])"
                           t-att-data-default-lang="editable and 'true' if lg[0] == website.default_lang_code else None">
                            <t t-esc="lg[1].split('/').pop()"/>
                        </a>
                    </li>
                    <li groups="base.group_website_publisher">
                        <t t-set="url_return" t-value="url_for('', '[lang]') + '?' + keep_query()"/>
                        <a t-attf-href="/web#action=base.action_view_base_language_install&amp;website_id=#{website.id}&amp;url_return=#{url_return}">
                            <i class="fa fa-plus-circle"/>
                            Add a language...
                        </a>
                    </li>
                </ul>
            </xpath>
        </template>
    </data>
</openerp>

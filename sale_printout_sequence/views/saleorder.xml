<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_saleorder_improvement" inherit_id="sale.report_saleorder_document">
            <xpath expr="//table[@class='table table-condensed']//thead//tr//th" position="before">
                <th></th>
            </xpath>

            <xpath expr="//tr[@t-foreach='o.order_line']" position="before">
                <t t-set="index" t-value="1"/>
            </xpath>

            <xpath expr="//tr[@t-foreach='o.order_line']//td" position="before">
                <td>
                    <span t-esc="index"/>
                    <t t-set="index" t-value="index + 1"/>
                </td>
            </xpath>

            <xpath expr="//tr[@t-foreach='o.order_line']" position="after">
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-right">
                        <span t-esc="sum(line.product_uom_qty for line in o.order_line)"/>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </xpath>
        </template>
    </data>
</openerp>
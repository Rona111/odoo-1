<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_mass_items_confirm" model="ir.ui.view">
            <field name="name">mass_items_confirm</field>
            <field name="model">mass.items.confirm</field>
            <field name="arch" type="xml">
                <form string="Confirm">               
                    <group>
                        <div>
                            <separator string="The below product(s) is/are already in list."/>
                            <separator string="Do you want to add it/them as the new line(s)?"/>
                            <field name="message" readonly="1">
                            </field>
                        </div>
                    </group>
                    <footer>
                        <button name="add_products" type="object" string="Yes" class="oe_highlight"/>
                        or
                        <button name="add_products_without_duplicate" type="object" string="No"/>
                    </footer>
               </form>
            </field>
        </record>
    </data>
</openerp>
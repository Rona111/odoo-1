<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    	 <record id="view_wizard_change_password" model="ir.ui.view">
            <field name="name">Change Password</field>
            <field name="model">wizard.change.password</field>
            <field name="arch" type="xml">
                <form>
                	<group>
                		<field name='old_passwd' password='True'/>
                		<field name='new_passwd' password='True'/>
                		<field name='confirmed_new_passwd' password='True'/>
                	</group>
                    <footer>
                        <button name="change_password" string="Change Password" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_wizard_change_password" model="ir.actions.act_window">
    		<field name="name">更改密码</field>
    		<field name="res_model">wizard.change.password</field>
    		<field name="type">ir.actions.act_window</field>
    		<field name="view_type">form</field>
    		<field name="view_mode">form</field>
    		<field name="view_id" ref="view_wizard_change_password"/>
    		<field name="target">new</field>
    	</record>

    	<menuitem name="change password" id="menu_portal_wizard_change_password" parent="portal_preferences" action="action_wizard_change_password" sequence="10"/>
	</data>
</openerp>